check process QFlow_{{id}}
    matching "-DQF_{{id}} "
    start program = "{{qb_dir}}/init.d/S50QFlow_{{id}} start"
    stop program = "{{qb_dir}}/init.d/S50QFlow_{{id}} stop"
    if does not exist 5 cycles then restart
    if cpu usage > 35% for 5 cycles then alert
    if memory usage > 35% for 5 cycles then alert
    if 3 restarts within 5 cycles then timeout
